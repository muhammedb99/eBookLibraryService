@using eBookLibraryService.ViewModels
@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="login-container">
    <div class="login-box">
        <div class="icon-container">
            <i class="fas fa-user-circle"></i>
        </div>
        <h1 class="text-center">Have an account? </h1>
        <form asp-action="Login" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="input-group">
                <input asp-for="Email" class="form-control input-field" placeholder="Username" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="input-group">
                <input asp-for="Password" class="form-control input-field" placeholder="Password" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-custom">Sign In</button>
            </div>

            <div class="links">
                <a asp-controller="Account" asp-action="VerifyEmail">Forgot your password?</a>
                <span>|</span>
                <a asp-controller="Account" asp-action="Register">Sign Up</a>
            </div>

            <footer class="footer">
                <small>eBookLibrary © 2024</small>
            </footer>
        </form>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
}
