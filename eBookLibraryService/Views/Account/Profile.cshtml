@model eBookLibraryService.ViewModels.ProfileViewModel

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-dark text-white text-center">
            <h2>My Profile</h2>
        </div>
        <div class="card-body">

            @if (TempData["Message"] != null)
            {
                <div class="alert alert-success text-center">
                    @TempData["Message"]
                </div>
            }

            <div class="row mb-4">
                <div class="col-md-4 text-muted">Full Name</div>
                <div class="col-md-6">@Model.FullName</div>
                <div class="col-md-2 text-end">
                    <button class="btn btn-primary btn-sm" onclick="toggleEdit('editFullName')">Edit</button>
                </div>
            </div>
            <div id="editFullName" class="edit-section" style="display: none;">
                <form asp-action="UpdateField" method="post">
                    <input type="hidden" name="FieldName" value="FullName" />
                    <div class="mb-3">
                        <label for="FullName" class="form-label">Full Name</label>
                        <input id="FullName" name="Value" class="form-control" value="@Model.FullName" />
                    </div>
                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-success btn-sm me-2">Save</button>
                        <button type="button" class="btn btn-secondary btn-sm" onclick="toggleEdit('editFullName')">Cancel</button>
                    </div>
                </form>
            </div>

            <div class="row mb-4">
                <div class="col-md-4 text-muted">Email</div>
                <div class="col-md-6">@Model.Email</div>
                <div class="col-md-2 text-end">
                    <button class="btn btn-primary btn-sm" onclick="toggleEdit('editEmail')">Edit</button>
                </div>
            </div>
            <div id="editEmail" class="edit-section" style="display: none;">
                <form asp-action="UpdateField" method="post">
                    <input type="hidden" name="FieldName" value="Email" />
                    <div class="mb-3">
                        <label for="Email" class="form-label">Email</label>
                        <input id="Email" name="Value" class="form-control" value="@Model.Email" />
                    </div>
                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-success btn-sm me-2">Save</button>
                        <button type="button" class="btn btn-secondary btn-sm" onclick="toggleEdit('editEmail')">Cancel</button>
                    </div>
                </form>
            </div>

            <div class="row mb-4">
                <div class="col-md-4 text-muted">Phone Number</div>
                <div class="col-md-6">@(!string.IsNullOrEmpty(Model.PhoneNumber) ? Model.PhoneNumber : "Not Set")</div>
                <div class="col-md-2 text-end">
                    <button class="btn btn-primary btn-sm" onclick="toggleEdit('editPhoneNumber')">Edit</button>
                </div>
            </div>
            <div id="editPhoneNumber" class="edit-section" style="display: none;">
                <form asp-action="UpdateField" method="post">
                    <input type="hidden" name="FieldName" value="PhoneNumber" />
                    <div class="mb-3">
                        <label for="PhoneNumber" class="form-label">Phone Number</label>
                        <input id="PhoneNumber" name="Value" class="form-control" value="@Model.PhoneNumber" />
                    </div>
                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-success btn-sm me-2">Save</button>
                        <button type="button" class="btn btn-secondary btn-sm" onclick="toggleEdit('editPhoneNumber')">Cancel</button>
                    </div>
                </form>
            </div>

            <div class="row mb-4">
                <div class="col-md-4 text-muted">Password</div>
                <div class="col-md-6">******</div>
                <div class="col-md-2 text-end">
                    <button class="btn btn-primary btn-sm" onclick="toggleEdit('editPassword')">Edit</button>
                </div>
            </div>
            <div id="editPassword" class="edit-section" style="display: none;">
                <form asp-action="UpdatePassword" method="post">
                    <div class="mb-3">
                        <label for="NewPassword" class="form-label">New Password</label>
                        <input id="NewPassword" name="NewPassword" class="form-control" type="password" />
                    </div>
                    <div class="mb-3">
                        <label for="ConfirmPassword" class="form-label">Confirm Password</label>
                        <input id="ConfirmPassword" name="ConfirmPassword" class="form-control" type="password" />
                    </div>
                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-success btn-sm me-2">Save</button>
                        <button type="button" class="btn btn-secondary btn-sm" onclick="toggleEdit('editPassword')">Cancel</button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <script>
        function toggleEdit(id) {
            const element = document.getElementById(id);
            element.style.display = element.style.display === 'none' ? 'block' : 'none';
        }
    </script>
}
