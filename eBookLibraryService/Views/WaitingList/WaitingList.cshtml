@model List<WaitingListEntryViewModel>

<h1>Manage Waiting List</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Book Title</th>
            <th>User ID</th>
            <th>Date Added</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var entry in Model)
        {
            <tr>
                <td>@entry.Id</td>
                <td>@entry.BookTitle</td>
                <td>@entry.UserId</td>
                <td>@entry.DateAdded.ToString("g")</td>
                <td>
                    <form asp-action="RemoveFromWaitingList" asp-controller="Admin" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@entry.Id" />
                        <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
