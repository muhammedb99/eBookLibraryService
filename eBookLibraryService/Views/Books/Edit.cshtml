@model eBookLibraryService.Models.Book

@{
    ViewData["Title"] = "Edit Book";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<h1>Edit Book</h1>

<form asp-action="Edit">

    <!-- Title -->
    <div class="form-group">
        <label asp-for="Title" class="control-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <!-- Author -->
    <div class="form-group">
        <label asp-for="Author" class="control-label"></label>
        <input asp-for="Author" class="form-control" />
        <span asp-validation-for="Author" class="text-danger"></span>
    </div>

    <!-- Publisher -->
    <div class="form-group">
        <label asp-for="Publisher" class="control-label"></label>
        <input asp-for="Publisher" class="form-control" />
        <span asp-validation-for="Publisher" class="text-danger"></span>
    </div>

    <!-- Borrow Price -->
    <div class="form-group">
        <label asp-for="BorrowPrice" class="control-label"></label>
        <input asp-for="BorrowPrice" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="BorrowPrice" class="text-danger"></span>
    </div>

    <!-- Buying Price -->
    <div class="form-group">
        <label asp-for="BuyingPrice" class="control-label"></label>
        <input asp-for="BuyingPrice" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="BuyingPrice" class="text-danger"></span>
    </div>

    <!-- Discount Price -->
    <div class="form-group">
        <label asp-for="DiscountPrice" class="control-label"></label>
        <input asp-for="DiscountPrice" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="DiscountPrice" class="text-danger"></span>
    </div>

    <!-- Discount Until -->
    <div class="form-group">
        <label asp-for="DiscountUntil" class="control-label">Discount Valid Until</label>
        <select asp-for="DiscountUntil" class="form-control">
            <option value="">Select Date</option>
            @for (int i = 0; i <= 7; i++)
            {
                var date = DateTime.Now.AddDays(i);
                <option value="@date.ToString("yyyy-MM-dd")">@date.ToString("dddd, MMMM d")</option>
            }
        </select>
        <span asp-validation-for="DiscountUntil" class="text-danger"></span>
    </div>

    <!-- Year of Publishing -->
    <div class="form-group">
        <label asp-for="YearOfPublishing" class="control-label"></label>
        <input asp-for="YearOfPublishing" type="number" class="form-control" />
        <span asp-validation-for="YearOfPublishing" class="text-danger"></span>
    </div>

    <!-- Age Limitation -->
    <div class="form-group">
        <label asp-for="AgeLimitation" class="control-label"></label>
        <input asp-for="AgeLimitation" type="number" class="form-control" />
        <span asp-validation-for="AgeLimitation" class="text-danger"></span>
    </div>

    <!-- Image URL -->
    <div class="form-group">
        <label asp-for="ImageUrl" class="control-label"></label>
        <input asp-for="ImageUrl" class="form-control" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>

    <!-- Genre -->
    <div class="form-group">
        <label asp-for="Genre" class="control-label"></label>
        <select asp-for="Genre" class="form-control">
            <option value="">Select Genre</option>
            <option value="Horror">Horror</option>
            <option value="Romance">Romance</option>
            <option value="Kids">Kids</option>
            <option value="Classic">Classic</option>
            <option value="Thriller">Thriller</option>
        </select>
        <span asp-validation-for="Genre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="PdfLink">PDF Link</label>
        <input type="url" id="PdfLink" name="PdfLink" class="form-control" placeholder="Enter PDF download link" />
    </div>
    <div class="form-group">
        <label for="EpubLink">EPUB Link</label>
        <input type="url" id="EpubLink" name="EpubLink" class="form-control" placeholder="Enter EPUB download link" />
    </div>
    <div class="form-group">
        <label for="F2bLink">F2B Link</label>
        <input type="url" id="F2bLink" name="F2bLink" class="form-control" placeholder="Enter F2B download link" />
    </div>
    <div class="form-group">
        <label for="MobiLink">MOBI Link</label>
        <input type="url" id="MobiLink" name="MobiLink" class="form-control" placeholder="Enter MOBI download link" />
    </div>


    <div>
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-warning"><i class="fa-solid fa-arrow-left"></i>Back</a>
    </div>
</form>

