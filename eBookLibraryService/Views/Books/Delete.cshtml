@model eBookLibraryService.Models.Book

@{
    ViewData["Title"] = "Delete Book";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<h1>Delete Book</h1>

<div class="container">
    <h3>Are you sure you want to delete the book "<strong>@Model.Title</strong>"?</h3>

    <div>
        <table class="table">
            <tr>
                <th>Title</th>
                <td>@Model.Title</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>@Model.Author</td>
            </tr>
            <tr>
                <th>Publisher</th>
                <td>@Model.Publisher</td>
            </tr>
            @if (Model.BorrowPrice != null)
            {
                <tr>
                    <th>Borrow Price</th>
                    <td>@Model.BorrowPrice$</td>
                </tr>
            }
            else
            {
                <tr>
                    <th>Borrow Price</th>
                    <td>@Model.BorrowPrice</td>
                </tr>
            }
            <tr>
                <th>Buying Price</th>
                <td>@Model.BuyingPrice$</td>
            </tr>
            <tr>
                <th>Year of Publishing</th>
                <td>@Model.YearOfPublishing</td>
            </tr>
            <tr>
                <th>Age Limitation</th>
                <td>@Model.AgeLimitation</td>
            </tr>
            <tr>
                <th>BorrowConunt</th>
                <td>@Model.BorrowCount</td>
            </tr>
            <tr>
                <th>PurchaseCount</th>
                <td>@Model.PurchaseCount</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="@Model.ImageUrl" alt="Book Image" style="width: 100px; height: 150px;" /></td>
            </tr>
        </table>
    </div>

    <form method="post">
        <button type="submit" class="btn btn-danger">Delete</button>   
        <a asp-action="Index" class="btn btn-warning"><i class="fa-solid fa-arrow-left"></i>Back</a>
    </form>
</div>
