@model eBookLibraryService.Models.Book

@{
    ViewData["Title"] = "Book Details";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<h1>@Model.Title</h1>

<div class="container">
    <h2>Details of @Model.Title</h2>

    <table class="table">
        <tr>
            <th>Title</th>
            <td>@Model.Title</td>
        </tr>
        <tr>
            <th>Author</th>
            <td>@Model.Author</td>
        </tr>
        <tr>
            <th>Publisher</th>
            <td>@Model.Publisher</td>
        </tr>
        <tr>
            <th>Borrow Price</th>
            <td>@(Model.BorrowPrice.HasValue ? $"{Model.BorrowPrice}$" : "Not Available")</td>
        </tr>
        <tr>
            <th>Buying Price</th>
            <td>@Model.BuyingPrice$</td>
        </tr>
        <tr>
            <th>Year of Publishing</th>
            <td>@Model.YearOfPublishing</td>
        </tr>
        <tr>
            <th>Age Limitation</th>
            <td>@Model.AgeLimitation</td>
        </tr>
        <tr>
            <th>Genre</th>
            <td>@Model.Genre</td>
        </tr>
        <tr>
            <th>Image</th>
            <td><img src="@Model.ImageUrl" alt="Book Image" style="width: 100px; height: 150px;" /></td>
        </tr>
        <tr>
            <th>Waiting List</th>
            <td>
                @if (Model.WaitingList?.Count > 0)
                {
                    <span>@Model.WaitingList.Count people are in the waiting list.</span>
                }
                else
                {
                    <span>No one is currently waiting for this book.</span>
                }
            </td>
        </tr>
    </table>

    <hr />

    @* Reviews Section *@
    <h3>Reviews</h3>
    @if (Model.Reviews.Any())
    {
        foreach (var review in Model.Reviews)
        {
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">Rating: @review.Rating/5</h5>
                    <p class="card-text">@review.Feedback</p>
                    <p class="text-muted"><small>By @review.UserEmail on @review.CreatedAt.ToString("g")</small></p>
                </div>
            </div>
        }
    }
    else
    {
        <p>No reviews yet for this book.</p>
    }
</div>
