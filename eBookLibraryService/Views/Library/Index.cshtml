<div class="container">
    <h1>My Library</h1>

    @* Owned Books Section *@
    <h2>Owned Books</h2>
    <div class="row">
        @if (Model.OwnedBooks.Count > 0)
        {
            @foreach (var book in Model.OwnedBooks)
            {
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm">
                        <img src="@book.Cover" alt="@book.Title" class="card-img-top" style="height: 200px; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title">@book.Title</h5>
                            <p class="card-text">
                                <strong>Author:</strong> @book.Author<br />
                                <strong>Publisher:</strong> @book.Publisher<br />
                                <strong>Year of Publishing:</strong> @book.PublishYear
                            </p>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <p>No owned books found.</p>
        }
    </div>

    @* Borrowed Books Section *@
    <h2>Borrowed Books</h2>
    <div class="row">
        @if (Model.BorrowedBooks.Count > 0)
        {
            @foreach (var book in Model.BorrowedBooks)
            {
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm">
                        <img src="@book.Cover" alt="@book.Title" class="card-img-top" style="height: 200px; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title">@book.Title</h5>
                            <p class="card-text">
                                <strong>Author:</strong> @book.Author<br />
                                <strong>Publisher:</strong> @book.Publisher<br />
                                <strong>Year of Publishing:</strong> @book.PublishYear
                            </p>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <p>No borrowed books found.</p>
        }
    </div>
</div>
