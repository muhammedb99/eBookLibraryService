@using Microsoft.AspNetCore.Identity
@model IEnumerable<eBookLibraryService.Models.Book>
@inject UserManager<eBookLibraryService.Models.Users> UserManager

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Books</title>

    <!-- Fonts and Icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">

    <!-- Bootstrap and Custom Styles -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<section id="Welcome" class="welcome-section">
    <div class="welcome-content">
        @if (User.Identity.IsAuthenticated)
        {
            var user = await UserManager.GetUserAsync(User);
            var userName = user?.FullName ?? User.Identity.Name ?? "User";
            <h1 class="welcome-heading">Welcome Back, @userName!</h1>
        }
        else
        {
            <h1 class="welcome-heading">Welcome to the eBook Library!</h1>
        }
        <p class="welcome-message">Discover thousands of books across various genres. Dive into your next adventure!</p>
        <a href="#Allbooks" class="btn btn-primary btn-lg">Explore Books</a>
    </div>
</section>

<section id="Allbooks">
    <div class="container mt-4">
        @if (TempData["CartMessage"] != null)
        {
            <div class="alert alert-info">
                @TempData["CartMessage"]
            </div>
        }
        <div class="row">
            <!-- Books Section -->
            <div class="col-lg-9">
                <section id="all-books">
                    <h4 class="mb-4">All Books</h4>
                    <div class="row">
                        @if (!Model.Any())
                        {
                            <p class="text-center">No books found. Try a different search term or filter.</p>
                        }
                        else
                        {
                            @foreach (var book in Model)
                            {
                                <div class="col-md-4 mb-4">
                                    <div class="card shadow-sm">
                                        <img src="@book.ImageUrl" alt="@book.Title" class="card-img-top" style="height: 200px; object-fit: cover;">
                                        <div class="card-body">
                                            <h5 class="card-title">@book.Title</h5>
                                            <p class="card-text">
                                                <strong>Author:</strong> @book.Author<br />
                                                <strong>Genre:</strong> @book.Genre<br />
                                                <strong>Publisher:</strong> @book.Publisher<br />
                                                <strong>Year of Publishing:</strong> @book.YearOfPublishing<br />

                                                <!-- Price details -->
                                                @if (book.DiscountPrice != null && book.DiscountUntil != null && book.DiscountUntil.Value >= DateTime.Now)
                                                {
                                                    <strong>Price (Buy):</strong>
                                                    <span style="text-decoration: line-through;">@book.BuyingPrice $</span>
                                                    <span class="text-success">@book.DiscountPrice $</span>
                                                    <br />
                                                }
                                                else
                                                {
                                                    <strong>Price (Buy):</strong> @book.BuyingPrice <span>$</span>
                                                    <br />
                                                }

                                                @if (book.BorrowPrice > 0)
                                                {
                                                    <strong>Price (Borrow):</strong> @book.BorrowPrice <span>$</span>
                                                    <br />
                                                }
                                            </p>
                                            <div class="d-flex flex-column gap-2">
                                                @if (User.Identity.IsAuthenticated)
                                                {
                                                    <!-- Add to Cart (Buy) -->
                                                    <form asp-action="AddToCart" asp-controller="Cart" method="post">
                                                        <input type="hidden" name="id" value="@book.Id" />
                                                        <input type="hidden" name="isBorrow" value="false" />
                                                        <button type="submit" class="btn btn-primary w-100">Add to Cart (Buy)</button>
                                                    </form>

                                                    <!-- Add to Cart (Borrow) -->
                                                    @if (book.BorrowPrice > 0)
                                                    {
                                                        <form asp-action="AddToCart" asp-controller="Cart" method="post">
                                                            <input type="hidden" name="id" value="@book.Id" />
                                                            <input type="hidden" name="isBorrow" value="true" />
                                                            <button type="submit" class="btn btn-secondary w-100">Add to Cart (Borrow)</button>
                                                        </form>
                                                    }

                                                    <!-- Buy Now -->
                                                    <form asp-action="ProcessPayment" asp-controller="Payment" method="get">
                                                        <input type="hidden" name="amount" value="@(book.DiscountPrice != null && book.DiscountUntil != null && book.DiscountUntil.Value >= DateTime.Now ? book.DiscountPrice : book.BuyingPrice)" />
                                                        <input type="hidden" name="bookId" value="@book.Id" />
                                                        <button type="submit" class="btn btn-success w-100">Buy Now</button>
                                                    </form>

                                                }
                                                else
                                                {
                                                    <a href="/Account/Login" class="btn btn-primary">Login to Add to Cart</a>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </section>
            </div>

            <!-- Filters and Sort Section -->
            <div class="col-lg-3">
                <!-- Filter Section -->
                <div class="bg-light p-4 rounded shadow-sm mb-4">
                    <form method="get" asp-action="Index" asp-controller="Home">
                        <h4 class="text-dark mb-3">Filter Books</h4>
                        <div class="mb-3">
                            <label for="author" class="form-label">Author</label>
                            <input type="text" name="author" id="author" class="form-control" placeholder="Author name" />
                        </div>
                        <div class="mb-3">
                            <label for="genre" class="form-label">Genre</label>
                            <select name="genre" id="genre" class="form-select">
                                <option value="">Select Genre</option>
                                @if (ViewBag.GenreBooks?.Keys != null)
                                {
                                    foreach (var genre in ViewBag.GenreBooks.Keys)
                                    {
                                        <option value="@genre">@genre</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="method" class="form-label">Method</label>
                            <select name="method" id="method" class="form-select">
                                <option value="">All</option>
                                <option value="buy">Buy</option>
                                <option value="borrow">Borrow</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="priceRange" class="form-label">Price Range</label>
                            <div class="d-flex">
                                <input type="number" step="0.01" name="minPrice" id="minPrice" class="form-control me-2" placeholder="Min" />
                                <input type="number" step="0.01" name="maxPrice" id="maxPrice" class="form-control" placeholder="Max" />
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="isOnSale" class="form-label">On Sale</label>
                            <select name="isOnSale" id="isOnSale" class="form-select">
                                <option value="">All</option>
                                <option value="true">On Sale</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="year" class="form-label">Publication Year</label>
                            <input type="number" name="year" id="year" class="form-control" placeholder="Year" />
                        </div>
                        <div class="mb-3">
                            <label for="publisher" class="form-label">Publisher</label>
                            <input type="text" name="publisher" id="publisher" class="form-control" placeholder="Publisher name" />
                        </div>
                        <button class="btn btn-primary w-100" type="submit">Apply Filters</button>
                    </form>
                </div>

                <!-- Sort Section -->
                <div class="bg-light p-4 rounded shadow-sm">
                    <form method="get" asp-action="Index" asp-controller="Home">
                        <h4 class="text-dark mb-3">Sort Books</h4>
                        <div class="mb-3">
                            <select name="sortOrder" class="form-select">
                                <option value="">-- Sort By --</option>
                                <option value="price_asc">Price (Low to High)</option>
                                <option value="price_desc">Price (High to Low)</option>
                                <option value="popular">Most Popular</option>
                                <option value="genre">Genre</option>
                                <option value="year">Year of Publishing</option>
                            </select>
                        </div>
                        <button class="btn btn-primary w-100" type="submit">Sort</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
 @foreach (var genre in ViewBag.GenreBooks.Keys)
    {
        <section id="@genre.ToLower().Replace(" ", "-")-section" class="mt-5">
            <h4>@genre</h4>
            <div class="row">
                @foreach (var book in ViewBag.GenreBooks[genre])
                {
                    <div class="col-md-4 mb-4">
                        <div class="card shadow-sm">
                            <img src="@book.ImageUrl" alt="@book.Title" class="card-img-top" style="height: 200px; object-fit: cover;">
                            <div class="card-body">
                                <h5 class="card-title">@book.Title</h5>
                                <p class="card-text">
                                    <strong>Author:</strong> @book.Author<br />
                                    <strong>Genre:</strong> @book.Genre<br />
                                    <strong>Publisher:</strong> @book.Publisher<br />
                                    <strong>Year of Publishing:</strong> @book.YearOfPublishing<br />

                                    <!-- Price details -->
                                    @if (book.DiscountPrice != null && book.DiscountUntil != null && book.DiscountUntil >= DateTime.Now)
                                    {
                                        <strong>Price (Buy):</strong>
                                        <span style="text-decoration: line-through;">@book.BuyingPrice $</span>
                                        <span class="text-success">@book.DiscountPrice $</span>
                                        <br />
                                    }
                                    else
                                    {
                                        <strong>Price (Buy):</strong> @book.BuyingPrice <span>$</span>
                                        <br />
                                    }

                                    @if (book.BorrowPrice > 0)
                                    {
                                        <strong>Price (Borrow):</strong> @book.BorrowPrice <span>$</span>
                                        <br />
                                    }
                                </p>
                                <div class="d-flex justify-content-between">
                                    <!-- Add to Cart (Buy) -->
                                    <form asp-action="AddToCart" asp-controller="Cart" method="post">
                                        <input type="hidden" name="id" value="@book.Id" />
                                        <input type="hidden" name="isBorrow" value="false" />
                                        <button type="submit" class="btn btn-primary">Add to Cart (Buy)</button>
                                    </form>

                                    <!-- Add to Cart (Borrow) -->
                                    @if (book.BorrowPrice > 0) 
                                    {
                                        <form asp-action="AddToCart" asp-controller="Cart" method="post">
                                            <input type="hidden" name="id" value="@book.Id" />
                                            <input type="hidden" name="isBorrow" value="true" />
                                            <button type="submit" class="btn btn-secondary">Add to Cart (Borrow)</button>
                                        </form>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </section>

    }