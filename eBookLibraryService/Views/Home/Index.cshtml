@model IEnumerable<eBookLibraryService.Models.Book>

<h1>Books</h1>

<!-- Search and Sorting Bar -->
<div class="mb-4">
    <form method="get" asp-action="Index" asp-controller="Home">
        <div class="row">
            <!-- Search Bar -->
            <div class="col-md-6">
                <div class="input-group">
                    <input type="text" name="query" class="form-control" placeholder="Search for eBooks..." />
                </div>
            </div>
            <!-- Sorting Dropdown -->
            <div class="col-md-4">
                <select name="sortOrder" class="form-select">
                    <option value="">-- Sort By --</option>
                    <option value="price_asc">Price (Low to High)</option>
                    <option value="price_desc">Price (High to Low)</option>
                    <option value="popular">Most Popular</option>
                    <option value="genre">Genre</option>
                    <option value="year">Year of Publishing</option>
                </select>
            </div>
            <!-- Submit Button -->
            <div class="col-md-2">
                <button class="btn btn-primary" type="submit">Search & Sort</button>
            </div>
        </div>
    </form>
</div>

<!-- Books List -->
<div class="row">
    @if (!Model.Any())
    {
        <p>No books found. Try a different search term or sort order.</p>
    }
    else
    {
        @foreach (var book in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <img src="@book.ImageUrl" alt="@book.Title" class="card-img-top" style="height: 200px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title">@book.Title</h5>
                        <p class="card-text">
                            <strong>Author:</strong> @book.Author<br />
                            <strong>Price (Buy):</strong> @book.BuyingPrice:$<br />
                            @if (book.BorrowPrice != null || book.BorrowPrice > 0)
                            {
                                <strong>Price (Borrow):</strong> <l>@book.BorrowPrice:$</l>
                            }
                            <br />
                            <strong>Genre:</strong> @book.Genre<br />
                            <strong>Year:</strong> @book.YearOfPublishing<br />
                            <strong>Popularity:</strong> @book.Popularity<br />
                        </p>
                        <div class="d-flex justify-content-between">
                            <!-- Add to Cart (Buy) -->
                            <form asp-action="AddToCart" asp-controller="Cart" method="post">
                                <input type="hidden" name="id" value="@book.Id" />
                                <input type="hidden" name="isBorrow" value="false" />
                                <button type="submit" class="btn btn-primary">Add to Cart (Buy)</button>
                            </form>

                            <!-- Add to Cart (Borrow) -->
                            @if (book.BorrowPrice.HasValue)
                            {
                                <form asp-action="AddToCart" asp-controller="Cart" method="post">
                                    <input type="hidden" name="id" value="@book.Id" />
                                    <input type="hidden" name="isBorrow" value="true" />
                                    <button type="submit" class="btn btn-secondary">Add to Cart (Borrow)</button>
                                </form>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>
