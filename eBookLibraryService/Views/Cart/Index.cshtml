@model eBookLibraryService.Models.Cart

<head>
    <h1 class="cart-header">Your Cart</h1>

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">

    <!-- Bootstrap and Custom Styles -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/cart-style.css" />
</head>

@if (Model.Items.Count == 0)
{
    <p>Your cart is empty.</p>
    <a href="@Url.Action("Index", "Home")" class="btn btn-primary mt-3">Continue Shopping</a>
}
else
{
    @if (Model.Items.Count >= 3)
    {
        <div class="alert alert-warning">
            You have reached the borrowing limit of 3 books.
        </div>
    }

    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Price</th>
                <th>Option</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.Book.Title</td>
                    <td>@item.Book.Author</td>
                    <td>@(item.IsBorrow ? $"{item.Book.BorrowPrice}$" : $"{item.Book.BuyingPrice}$")</td>
                    <td>@(item.IsBorrow ? "Borrow" : "Buy")</td>
                    <td>
                        <form asp-action="RemoveFromCart" method="post">
                            <input type="hidden" name="itemId" value="@item.Id" />
                            <button type="submit" class="btn btn-danger">Remove</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="d-flex justify-content-between align-items-center">
        <h4><strong>Total:</strong> @Model.GetTotalPrice()$</h4>
        <div>
            <form asp-action="ProcessPayment" asp-controller="Payment" method="get">
                <input type="hidden" name="amount" value="@Model.GetTotalPrice()" />
                <button type="submit" class="btn btn-success">Buy Now</button>
            </form>

        </div>
    </div>

    <a href="@Url.Action("Index", "Home")" class="btn btn-secondary mt-3">Continue Shopping</a>
}
