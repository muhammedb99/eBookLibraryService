@model eBookLibraryService.Models.Cart

<h1>Your Cart</h1>

@if (Model.Items.Count == 0)
{
    <p>Your cart is empty.</p>
    <a href="@Url.Action("Index", "Home")" class="btn btn-primary mt-3">Continue Shopping</a>
}
else
{
    <!-- Main form for updating cart options -->
    <form method="post" asp-action="UpdateCart" asp-controller="Cart">
        <table class="table">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Price</th>
                    <th>Option</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@item.Book.Title</td>
                        <td>@item.Book.Author</td>
                        <td>@item.Price$</td>
                        <td>
                            <select name="cartItems[@item.Id].IsBorrow" class="form-select">
                                <option value="false" selected="@(item.IsBorrow == false)">Buy</option>
                                <option value="true" selected="@(item.IsBorrow == true)">Borrow</option>
                            </select>
                        </td>
                        <td>
                            <form asp-action="RemoveFromCart" method="post" class="d-inline">
                                <input type="hidden" name="itemId" value="@item.Id" />
                                <button type="submit" class="btn btn-danger">Remove</button>
                            </form>
                        </td>
                    </tr>

                }
            </tbody>
        </table>

        <div class="d-flex justify-content-between align-items-center">
            <h4><strong>Total:</strong> @Model.GetTotalPrice()$</h4>
            <div>
                <button type="submit" class="btn btn-secondary">Update Options</button>
                <form asp-action="ProcessPayment" asp-controller="Payment" method="post" class="d-inline">
                    <button type="submit" class="btn btn-success">Confirm and Pay</button>
                </form>
            </div>
        </div>
    </form>

    <a href="@Url.Action("Index", "Home")" class="btn btn-secondary mt-3">Continue Shopping</a>
}
